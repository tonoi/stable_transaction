@page "/login"
@using JPYCOffline.ViewModels
@inject LoginViewModel VM

<VerticalStackLayout Padding="30">
    <Label Text="JPYC Wallet Login" FontSize="24" HorizontalOptions="Center" />
    <Entry Placeholder="Username" @bind-Text="VM.Username" />
    <Entry Placeholder="Password" IsPassword="true" @bind-Text="VM.Password" />
    <Button Text="Sign In" OnClick="@VM.OnSignInAsync" />
    <Button Text="Sign Up" OnClick='@(() => Shell.Current.GoToAsync("/signup"))' />
    <Button Text="Use Passcode" OnClick='@(() => Shell.Current.GoToAsync("/passcode"))' />
</VerticalStackLayout>