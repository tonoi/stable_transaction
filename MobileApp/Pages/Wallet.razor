@page "/wallet"
@using JPYCOffline.Services
@inject OfflineWalletService WalletSvc

<div style="padding: 20px;">
    <h2 style="font-size: 22px;">Balance</h2>
    <h1 style="font-size: 36px; font-weight: bold;">@($"{WalletSvc.Balance} JPYC")</h1>

    <button @onclick="SendOffline">Send (Offline)</button>
    <button @onclick='@(() => Shell.Current.GoToAsync("/settings"))'>Settings</button>
</div>

@code {
    async Task SendOffline()
    {
        // navigate to merchant scan page
        await Shell.Current.GoToAsync("/send");
    }
}