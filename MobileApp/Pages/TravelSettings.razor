@page "/travel-settings"
@using JPYCOffline.Services.Travel
@inject ILocalizationService LocalizationService
@inject NavigationManager Navigation

<div class="settings-container">
    <div class="settings-header">
        <h2>@AppResources.Settings</h2>
    </div>

    <div class="settings-content">
        <!-- Language Settings -->
        <div class="settings-section">
            <h3>@AppResources.Language</h3>
            <div class="setting-item">
                <label>言語 / Language:</label>
                <select @onchange="ChangeLanguage" class="form-control">
                    <option value="en">English</option>
                    <option value="ja">日本語</option>
                    <option value="fr">Français</option>
                    <option value="ko">한국어</option>
                </select>
            </div>
        </div>

        <!-- Notification Settings -->
        <div class="settings-section">
            <h3>@AppResources.Notifications</h3>
            <div class="setting-item">
                <button class="btn btn-primary" @onclick="NavigateToCreateAlarm">
                    @AppResources.CreateAlarm
                </button>
            </div>
        </div>

        <!-- About Section -->
        <div class="settings-section">
            <h3>About Japan Travel App</h3>
            <div class="about-content">
                <div class="about-item">
                    <h4>アプリについて / About This App</h4>
                    <p>Japan Travel App は外国人観光客向けに作られた包括的な旅行ガイドアプリです。</p>
                    <p>This Japan Travel App is a comprehensive travel guide designed for foreign tourists visiting Japan.</p>
                </div>
                
                <div class="about-item">
                    <h4>機能 / Features</h4>
                    <ul>
                        <li>多言語対応 (英語、日本語、フランス語、韓国語) / Multi-language support</li>
                        <li>ツアーガイド / Tour Guide</li>
                        <li>デジタルウォレット / Digital Wallet</li>
                        <li>プッシュ通知・アラーム / Push Notifications & Alarms</li>
                        <li>地図連携 / Map Integration</li>
                    </ul>
                </div>

                <div class="about-item">
                    <h4>技術情報 / Technical Information</h4>
                    <p><strong>Framework:</strong> .NET MAUI with Blazor</p>
                    <p><strong>Version:</strong> 1.0.0</p>
                    <p><strong>Platform:</strong> Android, iOS, Windows</p>
                    <p><strong>More Info:</strong> <a href="https://tonoi.co.jp" target="_blank">© tonoi.co,.ltd.</a></p>
                </div>

                <div class="about-item">
                    <h4>サポート / Support</h4>
                    <p>ご質問やお問い合わせは、アカウント設定からお気軽にご連絡ください。</p>
                    <p>For questions or support, please contact us through Account Settings.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void ChangeLanguage(ChangeEventArgs e)
    {
        var culture = e.Value?.ToString();
        if (!string.IsNullOrEmpty(culture))
        {
            LocalizationService.SetCulture(culture);
            Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
        }
    }

    private void NavigateToCreateAlarm()
    {
        Navigation.NavigateTo("/create-alarm");
    }
}

